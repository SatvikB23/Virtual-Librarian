<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFD6D5D5"
    android:paddingTop="10dp"
    tools:context="ltd.pvt.ujjwalgarg.virtuallibrarianwithhome.MyProfile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:elevation="14dp"
    android:id="@+id/profile_relative_layout"
    android:background="@drawable/layout_design">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:orientation="horizontal">
    <ImageView
       android:layout_width="90dp"
       android:layout_height="100dp"
       android:id="@+id/m1"
       android:layout_alignParentLeft="true"
       android:src="@drawable/myprofile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:text="Username"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:inputType="text"
            android:textSize="25dp"
            android:textColor="#000000"
            android:id="@+id/user_name" />
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:id="@+id/l1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:hint="Password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:id="@+id/show"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:textColor="@android:color/holo_green_light"
                android:text="Show Password"/>

        </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/pass_word"
        android:layout_marginRight="15dp"

        android:layout_marginLeft="15dp"
        android:layout_below="@id/lin" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_below="@id/lin"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/phone_number"
        android:layout_below="@id/pass_word" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_button"
        android:layout_marginTop="30dp"
        android:text="SAVE"
        android:elevation="50dp"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"


        android:background="@drawable/button_design3"/>


</RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logout"
        android:elevation="20dp"
        android:layout_below="@id/profile_relative_layout"
        android:background="@drawable/button_design3"
        android:layout_marginTop="40dp"
        android:text="LOGOUT"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"/>


</RelativeLayout>
