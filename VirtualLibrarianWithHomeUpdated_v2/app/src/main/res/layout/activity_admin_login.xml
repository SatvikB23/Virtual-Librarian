<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/admin"
    android:background="@drawable/animation_list"
    tools:context="ltd.pvt.ujjwalgarg.virtuallibrarianwithhome.AdminLogin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="50dp"
        android:id="@+id/adminimage"
        android:src="@drawable/admin"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="#e6e6e6"
        android:inputType="text"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:padding="13dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/adminusername"
        android:layout_below="@+id/adminimage"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#e6e6e6"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:padding="13dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/adminpass"
        android:layout_below="@+id/adminusername"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminpass"
        android:id="@+id/ch"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"

        android:layout_marginRight="15dp"

        >
    <CheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:id="@+id/show"
        android:background="@android:color/transparent"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:textColor="#FFFF"
            android:id="@+id/showtext"
            android:layout_marginLeft="10dp"
            android:text="Show Password"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminlogin"
        android:text="Login"
        android:textColor="#e6e6e6"
        android:background="@drawable/admin_button"
        android:padding="13dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ch"
        />
</RelativeLayout>
